<Window x:Class="LightScape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightScape"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!-- Ressourcen für das Fenster (z. B. wiederverwendbare Styles) -->
    <Window.Resources>
        <!-- Navigations-Textstil:
         - Weißer Text
         - Einheitlicher Außenabstand (nur horizontal)
         - Kupfergold als Glow-Farbe -->
        <Style x:Key="NavTextStyle" TargetType="TextBlock">
            <!-- Standardfarbe: Weiß -->
            <Setter Property="Foreground" Value="White"/>
            <!-- Abstand nach rechts und links (kein vertikaler Abstand nötig) -->
            <Setter Property="Margin" Value="10,0"/>
            <!-- Reaktion auf Maus-Hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!-- Wenn Maus drüber, dann Kupfergold als Glow-Effekt -->
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FFCB77"
                          BlurRadius="12"
                          ShadowDepth="0"
                          Opacity="1.0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Haupt-Layout-Container -->
    <Grid>
        <!-- Hintergrundbild für das gesamte Fenster -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/bg_lightscape.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <!-- Layout in zwei Zeilen: Navbar (oben), Inhalt (unten) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Höhe passt sich dem Inhalt an -->
            <RowDefinition Height="*"/>
            <!-- Restlicher Platz für Hauptinhalt -->
        </Grid.RowDefinitions>

        <!-- Navigationsleiste (erste Zeile) -->
        <Grid Grid.Row="0" Height="60" Panel.ZIndex="1" VerticalAlignment="Top">
            <!-- Halbtransparenter Navbar-Hintergrund zur Kontrastverstärkung -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#66252135" Offset="0" />
                    <!-- Links heller -->
                    <GradientStop Color="#80252135" Offset="1" />
                    <!-- Rechts dunkler -->
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Inhalte darüber: Logo und Navigation -->
            <Grid>
                <!-- Zwei Spalten: 
                   - Spalte 0 für das Logo (feste Breite)
                   - Spalte 1 für das Navigationsmenü (füllt den restlichen Platz aus) -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Navigationsmenü in Spalte 1 (rechtsbündig ausgerichtet) -->
                <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <!-- Menüeinträge mit Verweis auf Style aus Windows.Resources -->
                    <TextBlock Text="Home" Style="{StaticResource NavTextStyle}" Margin="10,0"/>
                    <TextBlock Text="Settings" Style="{StaticResource NavTextStyle}" Margin="10,0"/>
                    <TextBlock Text="About" Style="{StaticResource NavTextStyle}" Margin="10,0"/>
                </StackPanel>
            </Grid>
        </Grid>
        <!-- Logo -->
        <Image
        Source="pack://application:,,,/Assets/LightScapeLogo4000.png"
        Height="160"
        Margin="-13,-20,0,-40"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Panel.ZIndex="2"
        RenderOptions.BitmapScalingMode="HighQuality"/>

        <Grid Grid.Row="1"
      Panel.ZIndex="0">
            <!-- Hauptinhalt (zweite Zeile) -->
            <TextBlock Text="Hauptinhalt" Foreground="White" Width="Auto" Margin="3"/>
        </Grid>
    </Grid>
</Window>