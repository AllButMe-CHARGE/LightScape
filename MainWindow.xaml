<Window x:Class="LightScape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightScape"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!-- Ressourcen für das Fenster (z. B. wiederverwendbare Styles) -->
    <Window.Resources>
        <!-- Navigations-Textstil:
         - Weißer Text
         - Einheitlicher Außenabstand (nur horizontal)
         - Kupfergold als Glow-Farbe -->
        <Style x:Key="NavTextStyle" TargetType="TextBlock">
            <!-- Font mit der Schriftart "Audiowide" aus dem Fonts-Ordner ansprechen -->
            <Setter Property="FontFamily" Value="pack://application:,,,/LightScape;component/Fonts/Audiowide-Regular.ttf#Audiowide"/>
            <Setter Property="FontSize" Value="16"/>
            <!-- Standardfarbe: Weiß -->
            <Setter Property="Foreground" Value="White"/>
            <!-- Abstand nach rechts und links (kein vertikaler Abstand nötig) -->
            <Setter Property="Margin" Value="10,0"/>
            <!-- Reaktion auf Maus-Hover -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!-- Wenn Maus drüber, dann Kupfergold als Glow-Effekt -->
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FFCB77"
                          BlurRadius="12"
                          ShadowDepth="0"
                          Opacity="1.0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Haupt-Layout-Container -->
    <Grid>
        <!-- Hintergrundbild für das gesamte Fenster -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/bg_lightscape.png"
                        Stretch="UniformToFill" />
        </Grid.Background>

        <!-- Layout in zwei Zeilen: Navbar (oben), Inhalt (unten) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Höhe passt sich dem Inhalt an -->
            <RowDefinition Height="*"/>
            <!-- Restlicher Platz für Hauptinhalt -->
        </Grid.RowDefinitions>

        <!-- Navigationsleiste (erste Zeile) -->
        <Grid Grid.Row="0" Height="60" Panel.ZIndex="1" VerticalAlignment="Top">
            <!-- Halbtransparenter Navbar-Hintergrund zur Kontrastverstärkung -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#66252135" Offset="0" />
                    <!-- Links heller -->
                    <GradientStop Color="#80252135" Offset="1" />
                    <!-- Rechts dunkler -->
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Inhalte darüber: Logo und Navigation -->
            <Grid>
                <!-- Zwei Spalten: 
                   - Spalte 0 für das Logo (feste Breite)
                   - Spalte 1 für das Navigationsmenü (füllt den restlichen Platz aus) -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Navigationsmenü in Spalte 1 (rechtsbündig ausgerichtet) -->
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <!-- Menüeinträge mit Verweis auf Style aus Windows.Resources -->
                    <TextBlock Text="Dashboard"
                               Style="{StaticResource NavTextStyle}"
                               Margin="10,0"
                               Cursor="Hand"
                               MouseDown="Main_Click"/>
                    <TextBlock Text="Settings"
                               Style="{StaticResource NavTextStyle}"
                               Margin="10,0"
                               Cursor="Hand"
                               MouseDown="Settings_Click"/>
                    <TextBlock Text="About"
                               Style="{StaticResource NavTextStyle}"
                               Margin="10,0"
                               Cursor="Hand"
                               MouseDown="About_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Hauptinhalt -->
        <ContentControl x:Name="MainContent"
                Grid.Row="1"
                Panel.ZIndex="0"/>

        <!-- Logo separat in einem überlagerten Canvas -->
        <Canvas Panel.ZIndex="2"
            IsHitTestVisible="False">
            <Image
            Source="pack://application:,,,/Assets/LIGHT SCAPE.png"
            Height="340"
            Canvas.Left="-63"
            Canvas.Top="-106"
            RenderOptions.BitmapScalingMode="HighQuality"/>
        </Canvas>
    </Grid>
</Window>